<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CobaltAvaloniaDesktopTester.ViewModels"
             xmlns:cobalt="using:Cobalt.Avalonia.Desktop.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pia="using:PhosphorIconsAvalonia.Markup"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="800"
             x:Class="CobaltAvaloniaDesktopTester.Views.DialogsTestingPageView"
             x:DataType="vm:DialogsTestingPageViewModel">

    <ScrollViewer>
        <StackPanel Margin="24" Spacing="16">
            <TextBlock Text="File and Folder Dialogs"
                       FontSize="24"
                       FontWeight="SemiBold" />
            <TextBlock Text="Test file and folder picker dialogs with various configurations."
                       Foreground="{DynamicResource CobaltForegroundSecondaryBrush}" />

            <!-- File Dialogs Section -->
            <cobalt:SettingsCardExpander Header="File Dialogs"
                                         Description="Open and save file dialogs"
                                         IconData="{pia:IconGeometry Icon=file}"
                                         IsExpanded="True">
                <StackPanel Spacing="12">
                    <TextBlock Text="File dialogs allow users to select or save files with optional filters."
                               Foreground="{DynamicResource CobaltForegroundSecondaryBrush}"
                               TextWrapping="Wrap" />

                    <TextBlock Text="Open Files"
                               FontWeight="SemiBold"
                               Margin="0,8,0,0" />
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Open Single File"
                                Command="{Binding OpenSingleFileCommand}" />
                        <Button Content="Open Multiple Files"
                                Command="{Binding OpenMultipleFilesCommand}" />
                        <Button Content="Open Text Files (.txt, .md)"
                                Command="{Binding OpenTextFilesCommand}" />
                    </StackPanel>

                    <TextBlock Text="Save Files"
                               FontWeight="SemiBold"
                               Margin="0,8,0,0" />
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Save File"
                                Command="{Binding SaveFileCommand}" />
                        <Button Content="Save with File Type"
                                Command="{Binding SaveFileWithExtensionCommand}" />
                    </StackPanel>

                    <Border Background="{DynamicResource CobaltSurfaceBrush}"
                            BorderBrush="{DynamicResource CobaltBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,8,0,0"
                            IsVisible="{Binding FileDialogResult, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                        <TextBlock Text="{Binding FileDialogResult}"
                                   TextWrapping="Wrap"
                                   FontFamily="monospace"
                                   FontSize="12" />
                    </Border>
                </StackPanel>
            </cobalt:SettingsCardExpander>

            <!-- Folder Dialogs Section -->
            <cobalt:SettingsCardExpander Header="Folder Dialogs"
                                         Description="Select folders for various operations"
                                         IconData="{pia:IconGeometry Icon=folder}"
                                         IsExpanded="True">
                <StackPanel Spacing="12">
                    <TextBlock Text="Folder dialogs allow users to select directories."
                               Foreground="{DynamicResource CobaltForegroundSecondaryBrush}"
                               TextWrapping="Wrap" />

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Open Single Folder"
                                Command="{Binding OpenSingleFolderCommand}" />
                        <Button Content="Open Multiple Folders"
                                Command="{Binding OpenMultipleFoldersCommand}" />
                    </StackPanel>

                    <Border Background="{DynamicResource CobaltSurfaceBrush}"
                            BorderBrush="{DynamicResource CobaltBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,8,0,0"
                            IsVisible="{Binding FolderDialogResult, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                        <TextBlock Text="{Binding FolderDialogResult}"
                                   TextWrapping="Wrap"
                                   FontFamily="monospace"
                                   FontSize="12" />
                    </Border>
                </StackPanel>
            </cobalt:SettingsCardExpander>

        </StackPanel>
    </ScrollViewer>
</UserControl>
