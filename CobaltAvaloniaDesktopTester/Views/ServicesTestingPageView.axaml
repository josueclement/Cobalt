<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CobaltAvaloniaDesktopTester.ViewModels"
             xmlns:cobalt="using:Cobalt.Avalonia.Desktop.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pia="using:PhosphorIconsAvalonia.Markup"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="800"
             x:Class="CobaltAvaloniaDesktopTester.Views.ServicesTestingPageView"
             x:DataType="vm:ServicesTestingPageViewModel">

    <ScrollViewer>
        <StackPanel Margin="24" Spacing="16">
            <TextBlock Text="Services Testing"
                       FontSize="24"
                       FontWeight="SemiBold" />
            <TextBlock Text="Test the ContentDialog, Overlay, and InfoBar services."
                       Foreground="{DynamicResource CobaltForegroundSecondaryBrush}" />

            <!-- Content Dialogs Section -->
            <cobalt:SettingsCardExpander Header="Content Dialogs"
                                         Description="Test dialogs with various configurations"
                                         IconData="{pia:IconGeometry Icon=chat_circle_text}"
                                         IsExpanded="True">
                <StackPanel Spacing="12">
                    <TextBlock Text="Content dialogs block interaction and require user input."
                               Foreground="{DynamicResource CobaltForegroundSecondaryBrush}"
                               TextWrapping="Wrap" />

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Simple Message"
                                Command="{Binding ShowSimpleDialogCommand}" />
                        <Button Content="Complex Dialog"
                                Command="{Binding ShowComplexDialogCommand}" />
                        <Button Content="Password Dialog"
                                Command="{Binding ShowPasswordDialogCommand}" />
                    </StackPanel>

                    <TextBlock Text="{Binding LastDialogResult}"
                               IsVisible="{Binding LastDialogResult, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                               FontWeight="SemiBold" />
                </StackPanel>
            </cobalt:SettingsCardExpander>

            <!-- Overlay Section -->
            <cobalt:SettingsCardExpander Header="Overlay"
                                         Description="Test overlay with progress indicators"
                                         IconData="{pia:IconGeometry Icon=check_circle}"
                                         IsExpanded="True">
                <StackPanel Spacing="12">
                    <TextBlock Text="Overlays show progress for long-running operations."
                               Foreground="{DynamicResource CobaltForegroundSecondaryBrush}"
                               TextWrapping="Wrap" />

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Simple Task"
                                Command="{Binding RunSimpleTaskCommand}" />
                        <Button Content="Complex Task"
                                Command="{Binding RunComplexTaskCommand}" />
                    </StackPanel>

                    <TextBlock Text="{Binding LastOverlayResult}"
                               IsVisible="{Binding LastOverlayResult, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                               FontWeight="SemiBold" />
                </StackPanel>
            </cobalt:SettingsCardExpander>

            <!-- InfoBar Section -->
            <cobalt:SettingsCardExpander Header="InfoBar"
                                         Description="Test notification banners with different severities"
                                         IconData="{pia:IconGeometry Icon=info}"
                                         IsExpanded="True">
                <StackPanel Spacing="12">
                    <TextBlock Text="InfoBars display non-blocking notifications at the top of the window."
                               Foreground="{DynamicResource CobaltForegroundSecondaryBrush}"
                               TextWrapping="Wrap" />

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Info"
                                Command="{Binding ShowInfoCommand}" />
                        <Button Content="Success"
                                Command="{Binding ShowSuccessCommand}" />
                        <Button Content="Warning"
                                Command="{Binding ShowWarningCommand}" />
                        <Button Content="Error"
                                Command="{Binding ShowErrorCommand}" />
                        <Button Content="Close"
                                Command="{Binding CloseInfoBarCommand}" />
                    </StackPanel>

                    <TextBlock Text="{Binding LastInfoBarResult}"
                               IsVisible="{Binding LastInfoBarResult, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                               FontWeight="SemiBold" />
                </StackPanel>
            </cobalt:SettingsCardExpander>

        </StackPanel>
    </ScrollViewer>
</UserControl>
