<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CobaltAvaloniaDesktopTester.ViewModels"
             xmlns:editors="using:Cobalt.Avalonia.Desktop.Controls.Editors"
             xmlns:cobalt="using:Cobalt.Avalonia.Desktop.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="700"
             x:Class="CobaltAvaloniaDesktopTester.Views.EditorsTestingPageView"
             x:DataType="vm:EditorsTestingPageViewModel">

    <ScrollViewer>
        <StackPanel Margin="24" Spacing="24">
            <TextBlock Text="Editors"
                       FontSize="24"
                       FontWeight="SemiBold" />
            <TextBlock Text="Typed editor controls with input validation, formatting, and action areas."
                       Foreground="{DynamicResource CobaltForegroundSecondaryBrush}" />

            <!-- Integer Types -->
            <cobalt:SettingsCardExpander Header="Integer Types"
                                        Description="ShortEditor, UShortEditor, IntEditor, UIntEditor, LongEditor, ULongEditor"
                                        IsExpanded="True">
                <StackPanel Spacing="8">
                    <Grid ColumnDefinitions="*,Auto">
                        <editors:ShortEditor Title="Temperature (short, -1000..1000)"
                                             Watermark="Enter short integer..."
                                             Value="{Binding ShortValue}"
                                             Unit="°C" />
                        <TextBlock Grid.Column="1" Text="{Binding ShortValueInfo}" VerticalAlignment="Center"
                                   FontSize="12" Foreground="{DynamicResource CobaltForegroundSecondaryBrush}"
                                   Margin="12,0,0,0" />
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <editors:UShortEditor Title="Port (ushort, 1..65535)"
                                              Watermark="Enter port number..."
                                              Value="{Binding UshortValue}"
                                              NullWhenEmpty="True"
                                              Unit="port" />
                        <TextBlock Grid.Column="1" Text="{Binding UshortValueInfo}" VerticalAlignment="Center"
                                   FontSize="12" Foreground="{DynamicResource CobaltForegroundSecondaryBrush}"
                                   Margin="12,0,0,0" />
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <editors:IntEditor Title="Size (int, 0..10000)"
                                           Watermark="Enter integer..."
                                           Value="{Binding IntValue}"
                                           Unit="px" />
                        <TextBlock Grid.Column="1" Text="{Binding IntValueInfo}" VerticalAlignment="Center"
                                   FontSize="12" Foreground="{DynamicResource CobaltForegroundSecondaryBrush}"
                                   Margin="12,0,0,0" />
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <editors:UIntEditor Title="Count (uint, 1..999999)"
                                            Watermark="Enter unsigned integer..."
                                            Value="{Binding UintValue}"
                                            Unit="items" />
                        <TextBlock Grid.Column="1" Text="{Binding UintValueInfo}" VerticalAlignment="Center"
                                   FontSize="12" Foreground="{DynamicResource CobaltForegroundSecondaryBrush}"
                                   Margin="12,0,0,0" />
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <editors:LongEditor Title="Timestamp (long, ≥0)"
                                            Watermark="Enter long integer..."
                                            Value="{Binding LongValue}"
                                            Unit="ticks" />
                        <TextBlock Grid.Column="1" Text="{Binding LongValueInfo}" VerticalAlignment="Center"
                                   FontSize="12" Foreground="{DynamicResource CobaltForegroundSecondaryBrush}"
                                   Margin="12,0,0,0" />
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <editors:ULongEditor Title="File size (ulong, 1..1048576)"
                                             Watermark="Enter unsigned integer..."
                                             Value="{Binding UlongValue}"
                                             Unit="bytes" />
                        <TextBlock Grid.Column="1" Text="{Binding UlongValueInfo}" VerticalAlignment="Center"
                                   FontSize="12" Foreground="{DynamicResource CobaltForegroundSecondaryBrush}"
                                   Margin="12,0,0,0" />
                    </Grid>
                </StackPanel>
            </cobalt:SettingsCardExpander>

            <!-- Floating Point Types -->
            <cobalt:SettingsCardExpander Header="Floating Point Types"
                                        Description="SingleEditor, DoubleEditor, DecimalEditor"
                                        IsExpanded="True">
                <StackPanel Spacing="8">
                    <Grid ColumnDefinitions="*,Auto">
                        <editors:SingleEditor Title="Ratio (float, 0..100)"
                                              Watermark="Enter float..."
                                              Value="{Binding SingleValue}"
                                              FormatString="N3" />
                        <TextBlock Grid.Column="1" Text="{Binding SingleValueInfo}" VerticalAlignment="Center"
                                   FontSize="12" Foreground="{DynamicResource CobaltForegroundSecondaryBrush}"
                                   Margin="12,0,0,0" />
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <editors:DoubleEditor Title="Distance (double, 0..99999.99)"
                                              Watermark="Enter decimal..."
                                              Value="{Binding DoubleValue}"
                                              FormatString="N2"
                                              Unit="mm" />
                        <TextBlock Grid.Column="1" Text="{Binding DoubleValueInfo}" VerticalAlignment="Center"
                                   FontSize="12" Foreground="{DynamicResource CobaltForegroundSecondaryBrush}"
                                   Margin="12,0,0,0" />
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <editors:DoubleEditor Title="Speed (double, 0..99999.99)"
                                              Watermark="No constraints"
                                              Value="{Binding DoubleValue}"
                                              Unit="m/s" />
                        <TextBlock Grid.Column="1" Text="{Binding DoubleValueInfo}" VerticalAlignment="Center"
                                   FontSize="12" Foreground="{DynamicResource CobaltForegroundSecondaryBrush}"
                                   Margin="12,0,0,0" />
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <editors:DecimalEditor Title="Price (decimal, 0.01..99999.99)"
                                               Watermark="Enter price..."
                                               Value="{Binding DecimalValue}"
                                               FormatString="N2"
                                               Unit="USD" />
                        <TextBlock Grid.Column="1" Text="{Binding DecimalValueInfo}" VerticalAlignment="Center"
                                   FontSize="12" Foreground="{DynamicResource CobaltForegroundSecondaryBrush}"
                                   Margin="12,0,0,0" />
                    </Grid>
                </StackPanel>
            </cobalt:SettingsCardExpander>

            <!-- Text Types -->
            <cobalt:SettingsCardExpander Header="Text Types"
                                        Description="TextEditor, MultiLineTextEditor"
                                        IsExpanded="True">
                <StackPanel Spacing="8">
                    <Grid ColumnDefinitions="*,Auto">
                        <editors:TextEditor Title="Label (string, required, max 100)"
                                            Watermark="Enter text..."
                                            Text="{Binding TextValue}"
                                            Unit="txt" />
                        <TextBlock Grid.Column="1" Text="{Binding TextValueInfo}" VerticalAlignment="Center"
                                   FontSize="12" Foreground="{DynamicResource CobaltForegroundSecondaryBrush}"
                                   Margin="12,0,0,0" />
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <editors:TextEditor Title="With action (string, required, max 100)"
                                            Watermark="Type something..."
                                            Text="{Binding TextValue}">
                            <editors:TextEditor.ActionContent>
                                <Button Content="Go"
                                        Padding="6,2"
                                        FontSize="12" />
                            </editors:TextEditor.ActionContent>
                        </editors:TextEditor>
                        <TextBlock Grid.Column="1" Text="{Binding TextValueInfo}" VerticalAlignment="Center"
                                   FontSize="12" Foreground="{DynamicResource CobaltForegroundSecondaryBrush}"
                                   Margin="12,0,0,0" />
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <editors:TextEditor Watermark="No title" />
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <editors:MultiLineTextEditor Title="Notes (string, required, min 5)"
                                                     Watermark="Enter multi-line text..."
                                                     Text="{Binding MultiLineTextValue}" />
                        <TextBlock Grid.Column="1" Text="{Binding MultiLineTextValueInfo}" VerticalAlignment="Center"
                                   FontSize="12" Foreground="{DynamicResource CobaltForegroundSecondaryBrush}"
                                   Margin="12,0,0,0" />
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <editors:MultiLineTextEditor Title="With action (string, required, min 5)"
                                                     Watermark="Type something..."
                                                     Text="{Binding MultiLineTextValue}"
                                                     Unit="md">
                            <editors:MultiLineTextEditor.ActionContent>
                                <Button Content="Format"
                                        Padding="6,2"
                                        FontSize="12" />
                            </editors:MultiLineTextEditor.ActionContent>
                        </editors:MultiLineTextEditor>
                        <TextBlock Grid.Column="1" Text="{Binding MultiLineTextValueInfo}" VerticalAlignment="Center"
                                   FontSize="12" Foreground="{DynamicResource CobaltForegroundSecondaryBrush}"
                                   Margin="12,0,0,0" />
                    </Grid>
                </StackPanel>
            </cobalt:SettingsCardExpander>

            <!-- Binary Types -->
            <cobalt:SettingsCardExpander Header="Binary Types"
                                        Description="HexadecimalEditor, Base64Editor"
                                        IsExpanded="True">
                <StackPanel Spacing="8">
                    <Grid ColumnDefinitions="*,Auto">
                        <editors:HexadecimalEditor Title="Raw bytes (byte[])"
                                                   Watermark="Enter hex bytes (e.g. 0A FF 1B)..."
                                                   Value="{Binding BytesValue}" />
                        <TextBlock Grid.Column="1" Text="{Binding BytesValueInfo}" VerticalAlignment="Center"
                                   FontSize="12" Foreground="{DynamicResource CobaltForegroundSecondaryBrush}"
                                   Margin="12,0,0,0" />
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <editors:Base64Editor Title="Encoded data (byte[])"
                                              Watermark="Enter Base64 string..."
                                              Value="{Binding BytesValue}" />
                        <TextBlock Grid.Column="1" Text="{Binding BytesValueInfo}" VerticalAlignment="Center"
                                   FontSize="12" Foreground="{DynamicResource CobaltForegroundSecondaryBrush}"
                                   Margin="12,0,0,0" />
                    </Grid>
                </StackPanel>
            </cobalt:SettingsCardExpander>

        </StackPanel>
    </ScrollViewer>
</UserControl>
