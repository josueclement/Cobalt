<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:Cobalt.Avalonia.Desktop.Controls">

    <ControlTheme x:Key="{x:Type controls:SettingsCard}" TargetType="controls:SettingsCard">
        <Setter Property="Template">
            <ControlTemplate>
                <Border x:Name="PART_Root"
                        Background="{DynamicResource CobaltSurfaceBrush}"
                        BorderBrush="{DynamicResource CobaltBorderSubtleBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                    <Grid ColumnDefinitions="Auto,*,Auto">

                        <!-- Icon container -->
                        <Border Grid.Column="0"
                                Width="40" Height="40"
                                VerticalAlignment="Center"
                                IsVisible="{Binding IconData, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static ObjectConverters.IsNotNull}}">
                            <PathIcon Data="{Binding IconData, RelativeSource={RelativeSource TemplatedParent}}"
                                      Width="20" Height="20"
                                      Foreground="{DynamicResource CobaltForegroundBrush}" />
                        </Border>

                        <!-- Header + Description -->
                        <StackPanel Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Margin="12,0,12,0">
                            <TextBlock Text="{Binding Header, RelativeSource={RelativeSource TemplatedParent}}"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource CobaltForegroundBrush}" />
                            <TextBlock Text="{Binding Description, RelativeSource={RelativeSource TemplatedParent}}"
                                       FontSize="12"
                                       TextWrapping="Wrap"
                                       Foreground="{DynamicResource CobaltForegroundSecondaryBrush}"
                                       IsVisible="{Binding Description, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                        </StackPanel>

                        <!-- Content (shown when Content is set) -->
                        <ContentPresenter x:Name="PART_ContentPresenter"
                                          Grid.Column="2"
                                          Content="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}"
                                          VerticalAlignment="Center"
                                          IsVisible="{Binding Content, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static ObjectConverters.IsNotNull}}" />

                        <!-- Chevron (shown when Content is null) -->
                        <PathIcon x:Name="PART_Chevron"
                                  Grid.Column="2"
                                  Width="12" Height="12"
                                  VerticalAlignment="Center"
                                  Data="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6z"
                                  Foreground="{DynamicResource CobaltForegroundBrush}"
                                  IsVisible="{Binding Content, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static ObjectConverters.IsNull}}" />

                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>

        <!-- Hover/press styles only when clickable (no content) -->
        <Style Selector="^:not(:hasContent):pointerover /template/ Border#PART_Root">
            <Setter Property="Background" Value="{DynamicResource CobaltHoverBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource CobaltBorderBrush}" />
        </Style>

        <Style Selector="^:pressed /template/ Border#PART_Root">
            <Setter Property="Background" Value="{DynamicResource CobaltPressedBrush}" />
        </Style>
    </ControlTheme>

</ResourceDictionary>
