<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:Cobalt.Avalonia.Desktop.Controls">

    <ControlTheme x:Key="{x:Type controls:ContentDialog}" TargetType="controls:ContentDialog">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="IsVisible" Value="False" />
        <Setter Property="IconBrush" Value="{DynamicResource CobaltForegroundBrush}" />
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <!-- Overlay -->
                    <Border Name="PART_Overlay"
                           Background="{TemplateBinding OverlayBrush}"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch" />

                    <!-- Dialog Content -->
                    <Border Background="{DynamicResource CobaltSurfaceHighBrush}"
                           BorderBrush="{DynamicResource CobaltBorderBrush}"
                           BorderThickness="1"
                           CornerRadius="8"
                           MinWidth="320"
                           MaxWidth="600"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           BoxShadow="0 12 48 0 #99000000">
                        <Grid RowDefinitions="Auto,*,Auto" Margin="24">
                            <!-- Title -->
                            <TextBlock Grid.Row="0"
                                     Text="{TemplateBinding Title}"
                                     FontSize="20"
                                     FontWeight="SemiBold"
                                     Margin="0,0,0,16"
                                     IsVisible="{TemplateBinding Title, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />

                            <!-- Icon and Content -->
                            <Grid Grid.Row="1" ColumnDefinitions="Auto,*" Margin="0,0,0,24">
                                <!-- Icon -->
                                <Viewbox Grid.Column="0"
                                        Width="48"
                                        Height="48"
                                        VerticalAlignment="Top"
                                        Margin="0,0,16,0"
                                        IsVisible="{TemplateBinding IconData, Converter={x:Static ObjectConverters.IsNotNull}}">
                                    <Path Data="{TemplateBinding IconData}"
                                         Fill="{TemplateBinding IconBrush}"
                                         Stretch="Uniform" />
                                </Viewbox>

                                <!-- Content -->
                                <ContentPresenter Grid.Column="1"
                                                Content="{TemplateBinding Content}"
                                                ContentTemplate="{TemplateBinding ContentTemplate}" />
                            </Grid>

                            <!-- Buttons -->
                            <StackPanel Grid.Row="2"
                                      Orientation="Horizontal"
                                      HorizontalAlignment="Right"
                                      Spacing="8">
                                <Button Name="PART_PrimaryButton"
                                       Content="{TemplateBinding PrimaryButtonText}"
                                       IsEnabled="{TemplateBinding IsPrimaryButtonEnabled}"
                                       MinWidth="80"
                                       HorizontalContentAlignment="Center"
                                       Classes="accent"
                                       IsVisible="{TemplateBinding PrimaryButtonText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                <Button Name="PART_SecondaryButton"
                                       Content="{TemplateBinding SecondaryButtonText}"
                                       IsEnabled="{TemplateBinding IsSecondaryButtonEnabled}"
                                       MinWidth="80"
                                       HorizontalContentAlignment="Center"
                                       IsVisible="{TemplateBinding SecondaryButtonText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                <Button Name="PART_CloseButton"
                                       Content="{TemplateBinding CloseButtonText}"
                                       IsEnabled="{TemplateBinding IsCloseButtonEnabled}"
                                       MinWidth="80"
                                       HorizontalContentAlignment="Center"
                                       IsVisible="{TemplateBinding CloseButtonText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </Panel>
            </ControlTemplate>
        </Setter>

        <!-- Show dialog when IsOpen is true -->
        <Style Selector="^[IsOpen=True]">
            <Setter Property="IsVisible" Value="True" />
        </Style>
    </ControlTheme>

</ResourceDictionary>
